<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Modul.Translucent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Modul.BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Modul.BottomSheet</item>
    </style>

    <style name="Widget.Modul.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <!-- Widget styles -->

    <style name="Subheader2">
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="BodyB1">
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="BodyB2">
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/header</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:backgroundTint">#1A1535</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>